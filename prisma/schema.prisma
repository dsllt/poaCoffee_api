// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  isAdmin       Boolean  @default(false)
  created_at    DateTime @default(now())

  Review Review[]

  @@map("users")
}

model Coffee {
  id          String   @id @default(uuid())
  name        String
  description String?
  phone       String?
  address     String
  image       String?
  latitude    Float
  longitude   Float
  created_at  DateTime @default(now())

  Review     Review[]
  CoffeeType CoffeeType[]
  Food       Food[]

  @@map("coffees")
}

model Review {
  id          String   @id @default(uuid())
  description String
  rating      Decimal
  created_at  DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  userId String

  coffee   Coffee @relation(fields: [coffeeId], references: [id])
  coffeeId String

  @@map("reviews")
}

model CoffeeType {
  id          String  @id @default(uuid())
  name        String
  description String?
  image       String?

  coffee   Coffee @relation(fields: [coffeeId], references: [id])
  coffeeId String

  @@map("coffeeTypes")
}

model Food {
  id          String  @id @default(uuid())
  name        String
  description String?
  image       String?

  coffee   Coffee @relation(fields: [coffeeId], references: [id])
  coffeeId String

  @@map("foods")
}
